<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    android:padding="30dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:id="@+id/imageView"
        android:src="@drawable/logo_home"
        android:paddingBottom="50dp" />

    <com.example.penisriwahyu.pointerb.widget.FButton
        android:id="@+id/sd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SD"
        android:textSize="@dimen/button_text_size_home"
        android:layout_margin="4dp"
        android:textColor="@color/button_background_default"
        fbutton:shadowEnabled="true"
        fbutton:buttonColor="@color/red_SD"
        />

    <com.example.penisriwahyu.pointerb.widget.FButton
        android:id="@+id/smp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:text="SMP"
        android:textSize="@dimen/button_text_size_home"
        android:textColor="@color/button_background_default"
        fbutton:shadowEnabled="true"
        fbutton:buttonColor="@color/blue_SMP"
        />

    <com.example.penisriwahyu.pointerb.widget.FButton
        android:id="@+id/sma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:text="SMA"
        android:textSize="@dimen/button_text_size_home"
        android:textColor="@color/button_background_default"
        fbutton:shadowEnabled="true"
        fbutton:buttonColor="@color/fbutton_color_concrete"
        />

</LinearLayout>